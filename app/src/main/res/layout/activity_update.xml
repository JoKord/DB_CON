<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gistree.db_con.UpdateActivity">

    <TextView
        android:id="@+id/textView_updateIdTree"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:hint="id_Tree"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText_updateSpecies"
        android:layout_width="match_parent"
        android:hint="species"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_updateIdTree"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Guardar"
        android:layout_height="wrap_content"
        android:onClick="updateArvore"
        android:layout_below="@+id/editText_updateSpecies"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_updateGuardar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Apagar"
        android:layout_height="wrap_content"
        android:onClick="deleteArvore"
        android:layout_below="@+id/button_updateGuardar"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_updateDelete" />

</RelativeLayout>
